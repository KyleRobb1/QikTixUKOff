<%- include('partials/header', { title: 'Submit Event' }) %>

<div class="container">
    <h2>Submit a New Event</h2>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message">
            <%= error %>
        </div>
    <% } %>
    
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="info-message">
            <%= success %>
        </div>
    <% } %>
    
    <div class="form-container">
        <form action="/events/submit" method="POST" class="event-form">
            <div class="form-group">
                <label for="name">Event Name*</label>
                <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
                <label for="date">Event Date*</label>
                <input type="date" id="date" name="date" required>
            </div>
            
            <div class="form-group">
                <label for="time">Event Time*</label>
                <input type="time" id="time" name="time" required>
            </div>
            
            <div class="form-group">
                <label for="location">Location*</label>
                <input type="text" id="location" name="location" required>
            </div>
            
            <div class="form-group">
                <label for="description">Description*</label>
                <textarea id="description" name="description" rows="5" required></textarea>
            </div>
            
            <div class="form-group">
                <label for="price">Ticket Price (Â£)*</label>
                <input type="number" id="price" name="price" step="0.01" min="0" required>
            </div>
            
            <div class="form-group">
                <label for="ticket_limit">Ticket Limit*</label>
                <input type="number" id="ticket_limit" name="ticket_limit" min="1" value="100" required>
            </div>
            
            <div class="form-group">
                <label for="image_url">Image URL</label>
                <input type="url" id="image_url" name="image_url" placeholder="https://example.com/image.jpg">
                <small>Enter a URL for the event image. Leave blank to use a default image.</small>
            </div>
            
            <button type="submit" class="btn">Submit Event</button>
        </form>
    </div>
</div>

<%- include('partials/footer') %> 