<%- include('partials/header', { title: 'Home' }) %>

<section class="hero">
    <h2>Find Your Next Experience</h2>
    <p>Tickets for concerts, theatre, sports, and more.</p>
    <a href="/events" class="cta-button">Browse Events</a>
</section>

<section class="event-photos">
    <h3>Experience Live Events</h3>
    <div class="photo-gallery">
        <div class="gallery-item">
            <img src="/images/events/concert-1.jpg" alt="Concert crowd with colored lights">
            <div class="overlay">
                <span>Music</span>
            </div>
        </div>
        <div class="gallery-item">
            <img src="/images/events/concert-2.jpg" alt="Concert stage with dramatic lighting">
            <div class="overlay">
                <span>Concerts</span>
            </div>
        </div>
        <div class="gallery-item">
            <img src="/images/events/festival-1.jpg" alt="Music festival with dancing crowd">
            <div class="overlay">
                <span>Festivals</span>
            </div>
        </div>
        <div class="gallery-item">
            <img src="/images/events/event-1.jpg" alt="Large indoor event with special effects">
            <div class="overlay">
                <span>Special Events</span>
            </div>
        </div>
    </div>
</section>

<section class="event-listings">
    <h3>Featured Events</h3>
    <div class="event-grid">
        <!-- Placeholder for event cards -->
        <p>Event listings will appear here soon.</p>
        <!-- We will populate this dynamically later -->
    </div>
</section>

