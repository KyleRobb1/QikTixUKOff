# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_NAME=eventnest
DB_USER=postgres
DB_PASSWORD=your_secure_password

# JWT Authentication
JWT_SECRET=your_jwt_secret_key

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
